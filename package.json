{
  "name": "massiv-3d",
  "version": "0.0.3",
  "description": "a simple high performance webgl library",
  "main": "dist/massiv-3d.cjs.js",
  "module": "dist/massiv-3d.esm.js",
  "browser": "dist/massiv-3d.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "tsc:check": "tsc --noEmit",
    "clean": "rm -rf ./dist/*",
    "build": "rollup -c",
    "git-add-dist": "git add ./dist/*",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.spec.ts'",
    "example:hello-world": "webpack-dev-server --config examples/hello-world/webpack.config.js",
    "example:animations": "webpack-dev-server --config examples/animations/webpack.config.js",
    "example:trackball-camera-controls": "webpack-dev-server --config examples/trackball-camera-controls/webpack.config.js",
    "example:model-loading": "webpack-dev-server --config examples/model-loading/webpack.config.js",
    "example:worker-loading": "webpack-dev-server --config examples/worker-loading/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarvispact/massiv-3d.git"
  },
  "keywords": [
    "webgl",
    "js",
    "javascript",
    "engine"
  ],
  "author": "jarvispact <jarvispact@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jarvispact/massiv-3d/issues"
  },
  "homepage": "https://github.com/jarvispact/massiv-3d#readme",
  "pre-commit": [
    "tsc:check",
    "lint",
    "clean",
    "build",
    "git-add-dist"
  ],
  "devDependencies": {
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "chai": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-plugin-import": "^2.22.0",
    "gl-matrix": "^3.3.0",
    "mocha": "^8.1.3",
    "pre-commit": "^1.2.2",
    "rollup": "^2.28.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.3",
    "rollup-plugin-typescript2": "^0.27.3",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "peerDependencies": {
    "gl-matrix": "^3.3.0"
  }
}
