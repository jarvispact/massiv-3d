{
  "name": "massiv-3d",
  "version": "0.0.1",
  "description": "a simple high performance webgl library",
  "main": "dist/massiv-3d.js",
  "scripts": {
    "test": "nyc mocha --require @babel/register ./specs/**/*.specs.js",
    "clean": "rm -f ./dist/*",
    "build": "webpack --config webpack.config.build.js --mode development",
    "build:min": "webpack -p --config webpack.config.build.min.js --mode production",
    "build:all": "webpack --config webpack.config.build.js --mode development && webpack -p --config webpack.config.build.min.js --mode production",
    "git-add-dist": "git add dist/*",
    "dev": "webpack-dev-server --content-base ./tests --config webpack.config.dev.js --mode development"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarvispact/massiv-3d.git"
  },
  "keywords": [
    "webgl",
    "js",
    "javascript",
    "engine"
  ],
  "author": "jarvispact <jarvispact@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jarvispact/massiv-3d/issues"
  },
  "homepage": "https://github.com/jarvispact/massiv-3d#readme",
  "dependencies": {
    "gl-matrix": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^5.2.0",
    "nyc": "^13.2.0",
    "pre-commit": "^1.2.2",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "nyc": {
    "exclude": [
      "specs/**/*",
      "spec-helpers.js",
      "src/math-utils.js"
    ]
  },
  "pre-commit": [
    "clean",
    "build:all",
    "git-add-dist"
  ]
}
