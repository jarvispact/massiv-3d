{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "indent": ["error", 4],
    "max-len": ["error", 150],
    "arrow-body-style": ["error", "as-needed"],
    "arrow-parens": "off",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "object-curly-newline": "off",
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.specs.js"]}]
  }
}
